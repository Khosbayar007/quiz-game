#include <iostream>
#include <string>
using namespace std;

int Guess;
int Total;

// Question Class
class Question {
private:
    string Question_Text;
    string Answer_1;
    string Answer_2;
    string Answer_3;
    string Answer_4;
    int Correct_Answer;
    int Question_Score;

public:
    // Setter Function
    void setValues(string, string,
                   string, string,
                   string, int, int);

    // Function to ask questions
    void askQuestion();
};

// Driver code
int main()
{
    cout << "\n\n\t\t\t\tTHE DAILY QUIZ"
         << endl;
    cout << "\nPress Enter to start "
         << "the quiz... " << endl;

    // Input
    cin.get();

    string Name;
    int Age;

    // Input the details
    cout << "What is your name?"
         << endl;
    cin >> Name;
    cout << endl;

    cout << "How old are you?"
         << endl;
    cin >> Age;
    cout << endl;

    string Respond;
    cout << "Are you ready to take"
         << " the quiz " << Name
         << "? yes/no" << endl;
    cin >> Respond;

